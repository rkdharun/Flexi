<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="500.0" prefWidth="650.0"
            style="-fx-background-color: #1c1c1c; -fx-background-radius: 15px 15px 15px 15px;"
            xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.rkdharun.flexidesk.controller.ui.PrimaryFXMLController">
  <effect>
    <Blend/>
  </effect>
  <cursor>
    <Cursor fx:constant="DEFAULT"/>
  </cursor>
  <left>
    <HBox prefHeight="500.0" prefWidth="130.0" BorderPane.alignment="CENTER">
      <children>
        <VBox alignment="CENTER" prefHeight="490.0" prefWidth="88.0" spacing="20.0"
              style="-fx-background-color: #222222; -fx-background-radius: 0px 0px  0px 15px;">
          <children>
            <Pane prefHeight="68.0" prefWidth="88.0"/>
            <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#createNetwork" prefHeight="35.0"
                    prefWidth="90.0" style="-fx-background-radius: 0px 15px 15px 0px; -fx-background-color: #227FFF;"
                    text="Create" textFill="WHITE">
              <font>
                <Font name="Segoe UI Semibold" size="18.0"/>
              </font>
            </Button>
            <Button fx:id="btnJoin" mnemonicParsing="false" onAction="#joinNetwork" prefHeight="35.0" prefWidth="90.0"
                    style="-fx-background-radius: 0px 15px 15px 0px; -fx-background-color: #227FFF;" text="Join"
                    textFill="WHITE">
              <font>
                <Font name="Segoe UI Semibold" size="18.0"/>
              </font>
            </Button>
            <Pane prefHeight="123.0" prefWidth="150.0" VBox.vgrow="ALWAYS"/>
            <ImageView fx:id="btnLogout" fitHeight="29.0" fitWidth="25.0" onMouseClicked="#closeApp" pickOnBounds="true"
                       preserveRatio="true" VBox.vgrow="ALWAYS">
              <image>
                <Image url="@../images/icons/icon_logout.png"/>
              </image>
              <VBox.margin>
                <Insets bottom="40.0"/>
              </VBox.margin>
            </ImageView>
          </children>
        </VBox>
      </children>
    </HBox>
  </left>
  <opaqueInsets>
    <Insets/>
  </opaqueInsets>
  <top>
    <Label alignment="CENTER" prefHeight="32.0" prefWidth="89.0" text="FLEXI" textFill="WHITE"
           BorderPane.alignment="CENTER">
      <font>
        <Font name="Segoe UI Bold" size="18.0"/>
      </font>
      <effect>
        <DropShadow/>
      </effect>
      <padding>
        <Insets top="10.0"/>
      </padding>
    </Label>
  </top>
</BorderPane>
